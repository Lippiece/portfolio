---
interface Props {
  title: string;
  body: string;
  href: string;
  preview: string;
}

const { href, title, body, preview } = Astro.props;
---

<li class="link-card" style=`background-image: url('/${ title }.png');`>
  <figure>
    <figcaption>
      <h2>{title} &rarr;</h2>
      <p>{body}</p>
      <p class="links">
        <span><a href={href}>Code</a></span>
        {
          preview && (
            <span>
              <a href={preview}>Preview</a>
            </span>
          )
        }
      </p>
    </figcaption>
  </figure>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-size: 150%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  a {
    text-decoration: none;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  a:hover {
    opacity: 1;
    transition: opacity 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  img {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    object-fit: cover;
    object-position: center;
    transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    background-image: url("");
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  .links {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
  }
</style>
